#mb-meanbase-front.meanbase-front(:class='{loggedIn: currentUser, "in-drag-mode": dragging}')
  {{dragging}}
  mb-cms-headbar(:current-template="page.template", :is-published="page.published", :edit-mode="editMode")
  #main-view(:class="{'fixed-header-stopper': currentUser}")
    router-view(:page-source="page", :edit-mode="editMode", :menus="menus", :current-user="currentUser", :sortable="sortable")
      .mb-loading-screen.text-center
        h1
          i.fa.fa-spinner.fa-spin  
          span  Loading Template
  div(v-show="editMode" v-sortable="trashCanDraggable" title="Drag items here to delete").mb-drag-trash-can.mb-draggable
    i.fa.fa-trash.fa-3x
  mb-modal(:show.sync='currentModal', :modal-config="modalConfig")
    component(:is='currentModal', :modal-config="modalConfig")
  
