.mb-drag-trash-can
  position fixed
  bottom 1em
  right 1em
  border-radius: 100em
  background-color: #DB504A
  color white
  z-index: 10
  height 50px
  width 50px
  -webkit-transition all 0.3s
  transition all 0.3s
  div,
  span
  a,
  li
    display none


  i
    color white
    font-size 2em
    position: relative
    top 50%
    left 50%
    -webkit-transform translate(-50%, -50%)
    transform translate(-50%, -50%)

.in-drag-mode .mb-drag-trash-can
  height 75px
  width 75px

  i
    font-size: 3em

.in-drag-mode
  .mb-draggable,
  .mb-inner-draggable
    cursor move !important
    cursor -webkit-grabbing !important


/* The side navigation menu */
.mb-sidenav
    height: 100% /* 100% Full-height */
    width: 0 /* 0 width - change this with JavaScript */
    position: fixed /* Stay in place */
    z-index: 12 /* Stay on top */
    top: 0
    right: 0
    background-color: #111 /* Black*/
    overflow-x: hidden /* Disable horizontal scroll */
    padding-top: 60px /* Place content 60px from the top */
    transition: 0.5s /* 0.5 second transition effect to slide in the mb-sidenav */
    overflow: hidden

.mb-sidenav.mb-drawer-open
  width 250px

.mb-sidenav .mb-sidenav-child
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: -17px;
  overflow-y: scroll;

/* The navigation menu links */
.mb-sidenav a
    padding: 8px 8px 8px 32px
    text-decoration: none
    font-size: 14px
    color: #818181
    display: block
    transition: 0.3s

.mb-sidenav a.mb-page-link:hover
  background-color: #2980B9
  color #ECF0F1

/* Position and style the close button (top right corner) */
.mb-sidenav .mb-closebtn
  display none
  position: fixed
  top: 0
  right: 25px
  font-size: 36px
  margin-left: 50px

.mb-sidenav.mb-drawer-open .mb-closebtn
  display block

.mb-drawer-search
