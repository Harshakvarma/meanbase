{
  "host": "DOMAIN",
  "port": 80,
  "mongodb": "DATABASE_URL",
  "public": "../public/",
  "root": "../",
  "clientPath": "../public/",
  "appPath": "../public/app",
  "adminPath": "../public/admin/",
  "themesPath": "../public/themes/",
  "extensionsPath": "../public/extensions/",
  "uploadsPath": "../public/assets/",
  "viewsPath": "../views/",
  "seed": "SEED",
  "reset-seed": "RESET_SEED",
  "reset-users": "RESET_USERS",
  "admin-email": "ADMIN",
  "admin-pass": "ADMIN_PASS",
  "auth": {
    "token": {
      "secret": "FEATHERS_AUTH_SECRET"
    },
    "local": {},
    "facebook": {
      "clientID": "your facebook client id",
      "clientSecret": "your facebook client secret",
      "permissions": {
        "scope": ["public_profile","email"]
      }
    },
    "github": {
      "clientID": "your github client id",
      "clientSecret": "your github client secret",
      "permissions": {
        "scope": []
      }
    },
    "google": {
      "clientID": "your google client id",
      "clientSecret": "your google client secret",
      "permissions": {
        "scope": ["profile"]
      }
    },
    "instagram": {
      "clientID": "your instagram client id",
      "clientSecret": "your instagram client secret",
      "permissions": {
        "scope": ["basic"]
      }
    },
    "linkedin": {
      "clientID": "your linkedin client id",
      "clientSecret": "your linkedin client secret",
      "permissions": {
        "scope": ["r_emailaddress","r_basicprofile"]
      }
    },
    "paypal": {
      "clientID": "your paypal client id",
      "clientSecret": "your paypal client secret",
      "permissions": {
        "scope": ["https://identity.x.com/xidentity/resources/profile/me"]
      }
    }
  }
}
