/* Toggle Styles */

#wrapper
    box-sizing border-box
    padding-left 0
    -webkit-transition all 0.5s ease
    -moz-transition all 0.5s ease
    -o-transition all 0.5s ease
    transition all 0.5s ease

#wrapper.toggled
    padding-left 200px

#sidebar-wrapper
    z-index 1000
    position fixed
    left 200px
    width 0
    height 100%
    margin-left -200px
    overflow-y auto
    background #000
    -webkit-transition all 0.5s ease
    -moz-transition all 0.5s ease
    -o-transition all 0.5s ease
    transition all 0.5s ease

#wrapper.toggled #sidebar-wrapper
    width 200px

#meanbase-cms
    width 100%
    padding 15px

#wrapper.toggled #meanbase-cms
    position absolute
    margin-right -200px

/* Sidebar Styles */

.sidebar-nav
    position absolute
    top 0
    width 200px
    margin 0
    padding 0
    list-style none

.sidebar-nav li
    text-indent 10px
    line-height 40px

.sidebar-nav 
  li 
      cursor pointer
    a
        text-decoration none
        color #999999
    i
        font-size 1.3em
        margin-right 0.75em
        color #666
  li.disabled
    display none
    text-decoration none
    color #555

  li:hover
    text-decoration none
    background rgba(255,255,255,0.2)
    a
        color #fff
    i
        color #999
    
  li.disabled:hover
    background none
    color #555

.sidebar-nav li a:active,
.sidebar-nav li a:focus
    text-decoration none

.sidebar-nav > .sidebar-brand
    height 65px
    font-size 18px
    line-height 60px

.sidebar-nav > .sidebar-brand
    text-indent 20px
    
.sidebar-nav > .sidebar-brand a
    color #999999
    

.sidebar-nav > .sidebar-brand a:hover
    color #fff
    background none


#meanbase-cms
    p 
        font-size 1.2em
        color WET-ASPHALT
        line-height 1.6em
        padding 0.5em 0.25em
    .container
        margin-left 1em

@media(min-width:768px)

    .dont-hide
        display inline-block
     
    #meanbase-cms   
        .container
            width 100%
        
    #wrapper
        padding-left 200px


    #wrapper.toggled
        padding-left 0


    #sidebar-wrapper
        width 200px


    #wrapper.toggled #sidebar-wrapper
        width 0


    #meanbase-cms
        padding 20px


    #wrapper.toggled #meanbase-cms
        position relative
        margin-right 0
