#wrapper(ng-class="{'toggled': menuOpen}")
	#sidebar-wrapper
		ul.sidebar-nav
			li.sidebar-brand(ui-sref='main.page') 
				a Back to Site
			li(ui-sref='cms.themes' ng-show="user.permissions.indexOf('changeSiteSettings') > -1" ng-click="toggleMenu()")
				i.fa.fa-paint-brush
				a Themes                
			li(ui-sref='cms.comments' ng-show="user.permissions.indexOf('moderateComments') > -1" ng-click="toggleMenu()")
				i.fa.fa-comments
				a Comments                
			li(ui-sref='cms.users' ng-show="user.permissions.indexOf('manageUsers') > -1" ng-click="toggleMenu()") 
				i.fa.fa-users
				a Users                
			li(ui-sref='cms.media' ng-show="user.permissions.indexOf('manageMedia') > -1" ng-click="toggleMenu()")
				i.fa.fa-image
				a Media                
			li(ui-sref='cms.extensions' ng-show="user.permissions.indexOf('manageExtensions') > -1" ng-click="toggleMenu()")
				i.fa.fa-plug
				a Extensions               
			li(ui-sref='cms.analytics')
				i.fa.fa-bar-chart
				a Analytics
			li(ui-sref='cms.import' ng-show="user.permissions.indexOf('importExportData') > -1" ng-click="toggleMenu()")
				i.fa.fa-upload
				a Import Data
	#meanbase-cms
		//- #menu-toggle.btn.btn-default.fa.fa-bars()|  Menu
		nav.navbar-default.navbar-inverse
			.container
				div.navbar-header 
					button.navbar-toggle.collapsed(ng-click="toggleMenu()").pull-left.dont-hide
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					.navbar-brand {{pageTitle}}
		div(ui-view="")
