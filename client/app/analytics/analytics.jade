#meanbase-analytics.container
  .row
    .col-xs-6.col-md-4
      .form-group
        label Google Analytics App ID
        input(type='text' ng-model="appID").form-control
        button.btn.btn-success(ng-click="changeAppID(appID)").btn-block Set App ID
    .col-xs-6.col-md-4
      .form-group
        label Google Analytics Client ID
        input(type='text' ng-model="clientID").form-control
        button.btn.btn-success(ng-click="changeClientID(clientID)").btn-block Set Client ID
    .col-xs-12.col-md-4
      .form-group
        label Site Verification ID [for email]
        input(type='text' ng-model="verificationID").form-control
        button.btn.btn-success(ng-click="changeVerificationID(verificationID)").btn-block Set Verification ID
  section#auth-button
  section#view-selector
  section#chart
  
  ng-analytics-auth(label='Hello:Â ', hide-on-auth='true', auth-container='auth-button')
  ng-analytics-view(view-selector-container='view-selector', auth-container='auth-button')
  ng-analytics-chart(chart='chart', view-selector-container='view-selector', auth-container='auth-button')
  ng-analytics-report(queries='queries', auth-container='auth-button', view-selector-container='view-selector')
