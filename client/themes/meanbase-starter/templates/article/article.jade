.container(ng-controller="ArticleCtrl as controller")
	include ../../components/site-menu
	.row
		.col-md-8
			h1#page-title.mb-editable {{page.title}}
			p.lead
				| by 
				a(href='#') {{page.author}}
			hr
			p
				span.glyphicon.glyphicon-time 
				| {{page.created | date: 'MMM d, y h:mm a'}} 
			hr
			gallery(edit-mode="editMode" interval="3000" gallery-slug="gallery-1")
			img.img-responsive(src='http://placehold.it/900x300', alt='')
			div.extensions-area
			hr
			div#content-1.mb-editable(edit="editMode" ng-bind-html="page.content['content-1']")
			hr
			.well
				h4 Leave a Comment:
				.form-group
					.input-group
						.input-group-addon Name
						input(type="text" ng-model="comment.author" placeholder="nickname").form-control
				.form-group
					.input-group
						.input-group-addon Email
						input(type="email" ng-model="comment.email" placeholder="email").form-control
					p.help-block This will not be shown
				.form-group
					label Message
					textarea(ng-model="comment.content" placeholder="Message" rows="3").form-control
				button.btn.btn-primary(ng-click="submitComment()") Comment
				.alert.alert-success(ng-show="sucessfulSend") Comment sent!
			hr
			.well.media(ng-repeat="comment in comments")
				a.pull-left(href='#')
					img.media-object(src='http://placehold.it/64x64', alt='')
				.media-body
					h4.media-heading {{comment.author}}
					small {{comment.date | date: 'MMM d, y h:mm a'}} 
					p {{comment.content}}
		.col-md-4
			.well
				h4 Blog Search
				.input-group
					input.form-control(type='text')
					span.input-group-btn
					button.btn.btn-default(type='button')
						span.glyphicon.glyphicon-search
			.well
				h4 Blog Categories
			.row
				.col-lg-6
					ul.list-unstyled
						li
						a(href='#') Category Name
						li
						a(href='#') Category Name
						li
						a(href='#') Category Name
						li
						a(href='#') Category Name
				.col-lg-6
					ul.list-unstyled
						li
						a(href='#') Category Name
						li
						a(href='#') Category Name
						li
						a(href='#') Category Name
						li
						a(href='#') Category Name
