    .selector
      position absolute
      top 0
      left 0
      padding 0.2em 0.4em
      margin 0.3em
      border-bottom-right-radius 3px
      font-size 1.5em
      z-index 3
      cursor pointer
      &.fa-check-circle-o
        color #27AE60

    .invisible
      opacity 0

    .fullscreen
      position static
      -webkit-transform translateX(0)
      -ms-transform translateX(0)
      transform translateX(0)

      min-width initial
      min-height initial
      width auto
      height auto
    &.backdrop
