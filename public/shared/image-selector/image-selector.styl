.double-tap-instructions
  color #7F8C8D
  float left
  padding 0 0 0.5em
  margin 0
.choose-close-buttons
  min-width 160px
  display inline-block

.image-selector
  position relative
  text-align center

  .upload-box
    margin-bottom 0.5em
  .drop-zone
    padding 0.5em
    background-color #ECF0F1
    border 2px dashed #95A5A6
    p
      margin-bottom 0
      padding 0

    .progress
      margin-top 0.5em
      margin-bottom 0
  .nv-file-over
    background-color #BDC3C7
    border-color #ECF0F1

  .headbar
    // background-color #2C3E50
    padding 0.5em
    color #F1C40F
    border-radius 3px
    border-bottom-right-radius 0
    border-bottom-left-radius 0

    .import-photos
      margin-bottom 0.5em

    .mass-edit-buttons
      margin-bottom 0.5em
      .btn
        margin-right 0.5em
        margin-top 0.3em
        color #ECF0F1
        // color #2C3E50
      .download-selected
        background-color #2C3E50
      .delete-visible
        background-color #D35400
      .delete-selected
        background-color #C0392B
      .group-selected
        background-color #16A085
      .ungroup-selected
        background-color #34495E

    .select-all
      font-size 1.75em
      color #ECF0F1
      color #2C3E50
      color #7F8C8D
      padding 0 1em 0 0.5em
      cursor pointer

    .form-group,
    label
      margin-bottom 0

    input[type=checkbox] + label
      font-size 1.25em

    label:before
      color #F1C40F !important

  .body
    position relative
    // background-color #ECF0F1
    padding-top 0.5em
    padding-bottom 0.5em
    // border 2px solid #2C3E50
    overflow-y auto
    overflow-x hidden
    max-height 320px
  .album-left
    margin-right 1em

  .set-albums
    margin-right 1em
    padding-top 0.5em

  .image-details
    background-color #2C3E50
    padding 0.5em
    color #F1C40F
    border-radius 3px
    border-top-right-radius 0
    border-top-left-radius 0

    .input-group-addon
      color #ECF0F1
    .form-control
      color #ECF0F1
  .btn-spacing
    button
      margin-right 0.5em

    .pagination
      margin 0em 0

  .fullscreen-master-container
    height 300px
    max-width 100%
    overflow hidden
    position relative
    cursor pointer

    .select-button
      position absolute
      top 0
      left 0
      padding 0.3em 0.5em
      content "\f119"
      border-bottom-right-radius 3px
      font-size 2em
      font-family FontAwesome
      background-color rgba(255,255,255, 0.7)
      color #7F8C8D
      z-index 4

      &.selected:before
        color #16A085
        content "\f00c"

  .fullsize-box
    display inline-block
    position absolute
    top 0
    left 0
    width 100%
    text-align center
    -webkit-transition transform 0.6s
    transition transform 0.6s
    -webkit-touch-callout none
    -webkit-user-select none
    -khtml-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none

  .fullsize-box.left
    -webkit-transform translateX(-100%)
    -ms-transform translateX(-100%)
    transform translateX(-100%)
  .fullsize-box.right
    -webkit-transform translateX(100%)
    -ms-transform translateX(100%)
    transform translateX(100%)

  .fullsize-box.center
    -webkit-transform translateX(0)
    -ms-transform translateX(0)
    transform translateX(0)

  .fullscreen-image
    position relative
    display inline-block
    max-height 300px
    max-width 90%


    // -webkit-transform translateX(-50%)
