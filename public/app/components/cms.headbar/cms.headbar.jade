//meanbase Head Tool Bar 
#mb-headbar(ng-if="isLoggedIn" ng-controller="cms.headbar.controller as headbar")
  div#mb-headbar-child
    div
      a(href='/cms' target="_self" ng-show="!editMode").navbar-brand Admin
    div
      ul.root-ul
        li.dropdown(ng-show="currentUser.permissions.indexOf('editContent') > -1 && !editMode")
          //- a.dropdown-toggle(data-toggle="dropdown" role="button").fa.fa-plus-circle.fa-2x
          a.dropdown-toggle(data-toggle="dropdown" role="button") Create Page
          ul.dropdown-menu(role="menu")
            li(ng-repeat="template in themeTemplates")
              a(href="#" ng-click="headbar.createPage($event)" ng-mouseover="headbar.showScreenshot(template)" ng-mouseleave="headbar.hideScreenshot(template)") {{template + ' template'}}
        li(ng-show="editMode")
          a(ng-click="headbar.discardChanges()") Undo Changes
        li(ng-show="currentUser.permissions.indexOf('editContent') > -1")
          a(ng-click="headbar.toggleEdit()")
            i.fa.fa-lg(ng-class="{'fa-pencil': !editMode, 'fa-check': editMode}")
      ul.root-ul.dropdown.navbar-right(ng-show="editMode")
        li.dropdown
          a.dropdown-toggle(data-toggle="dropdown" role="button" ng-show="editMode").mb-fill
            i.fa.fa-lg.fa-ellipsis-v
          ul.dropdown-menu(role="menu").mb-dropdown-menu-right
            li(ng-show="editMode")
              a(ng-click="headbar.editPageModal()") Settings
            li(ng-show="currentUser.permissions.indexOf('editContent') > -1 && editMode")
              a(ng-click="headbar.publishChanges()") Publish Changes
            li(ng-show="currentUser.permissions.indexOf('publishContent') > -1 && editMode")
              a(ng-click="headbar.togglePublishPage()") 
                span(ng-hide="page.published") Publish
                span(ng-show="page.published") Unpublish
            li(ng-show="!editMode && previousEditUrl")
              a(ng-href="{{previousEditUrl}}") Return to last edit
            li(ng-show="currentUser.permissions.indexOf('deleteContent') > -1 && editMode")
              a(ng-click="headbar.deletePage()") Delete page
      ul.root-ul.mb-navbar-right(ng-show="!editMode")
        li.dropdown
          a.dropdown-toggle(data-toggle="dropdown" role="button")
            i.fa.fa-user.fa-lg
          ul.dropdown-menu(role="menu").dropdown-menu-right
            li 
              a(ng-click="logout()") Log Out
            li 
              a(href='/cms/my-settings' target="_self") Change Password
